{
  "private": true,
  "name": "otvudsporta",
  "version": "1.0.0",
  "scripts": {
    "build": "webpack -p --env.production --display-modules",
    "profile": "webpack --profile --json > ./build/profile.json && webpack-bundle-analyzer ./build/profile.json",
    "start": "webpack-dev-server --port 3000 --history-api-fallback",
    "test": "jest",
    "jest": "jest --watch",
    "deploy": "npm test && npm run build && firebase deploy",
    "deploy:quick": "npm run build && firebase deploy --only hosting"
  },
  "dependencies": {
    "@types/googlemaps": "3.29.2",
    "@types/mithril": "1.1.11",
    "@types/scriptjs": "0.0.2",
    "compote": "3.3.2",
    "firebase": "4.6.2",
    "mithril": "1.1.5",
    "redux": "3.7.2",
    "scriptjs": "2.5.8"
  },
  "devDependencies": {
    "@types/jest": "20.0.8",
    "autoprefixer": "7.1.6",
    "clean-webpack-plugin": "0.1.17",
    "css-loader": "0.28.7",
    "extract-text-webpack-plugin": "3.0.2",
    "file-loader": "1.1.5",
    "firebase-tools": "3.14.0",
    "html-webpack-plugin": "2.30.1",
    "jest": "20.0.4",
    "node-sass": "4.6.0",
    "postcss-loader": "2.0.8",
    "sass-loader": "6.0.6",
    "style-loader": "0.19.0",
    "ts-jest": "20.0.14",
    "ts-loader": "3.1.1",
    "typescript": "2.6.1",
    "var": "0.3.2",
    "webpack": "3.8.1",
    "webpack-dev-server": "2.9.4",
    "webpack-null-plugin": "0.0.2",
    "webpack-pwa-manifest": "3.3.2",
    "workbox-webpack-plugin": "2.1.1"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx,js}",
      "!src/**/*.test.{ts,tsx,js}",
      "!src/**/*.d.ts",
      "!node_modules/**"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "moduleNameMapper": {
      "\\.(s?css|less)$": "<rootDir>/node_modules/compote/components/jest/style.js"
    },
    "testRegex": "(/__tests__/.*|\\.test)\\.(ts|tsx|js)$",
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    }
  }
}
